{
  "train_batch_size": 16,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "eps": 1e-8,
      "weight_decay": 0.0001,
      "adam_w_mode": true
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 1000
    }
  },
  "fp16": {
    "enabled": true
  },
  "gradient_clipping": 1,
  "zero_optimization": {
    "stage": 2,
    "cpu_offload": false
  }

}